private static void propertyMenu(String menuTitle, String menuHeader, ArrayList<String> categoryPropertiesArrayList, String menuPrompt, String productCategory, String uniqueProperty)){
  MenuBuilder.menuBuilder(menuTitle, "Eigenschaften", categoryPropertiesArrayList, standardMenuPrompt);
  String propertyMenuCPropertySelectInput = menuScanner.next();
 
  switch (propertyMenuCPropertySelectInput) 
    case "1", "1)" -> {
      System.out.println("Gebe die Marke an:");
      String productBrand = menuScanner.next();
      productCategory.setProductBrand(productBrand);
    }
    case "2", "2)" -> {
      System.out.println("Gebe das Modell an:");
      String productModel = menuScanner.next();
      productCategory.setProductModel(productModel);
    }
    case "3", "3)" -> productPriceInput(productCategory);
    
    
    case "4", "4)" -> {
    //hier filtern, welche Produktkategorie mit productCategory übergeben wurde
    
      System.out.println("Gebe " + uniqueProperty + " an:");
      String uniquePropertyInput = menuScanner.next().toLowerCase();
      uniquePropertyInput = uniquePropertyInput.replace(",", "").replace("dpi", "");
      try {
        Integer uniqueProperty = Integer.valueOf(uniquePropertyInput);
        productCategory.setSensorAufloesung(aufloesung);
      } catch (NumberFormatException e) {
        wrongInputQuit("wrongInput");
      }
    }
    
    
    
    case "0", "0)" -> {
      if (productCategory.getProductBrand().isEmpty() || productCategory.getProductModel().isEmpty() || productCategory.getProductPrice() == 0.0 || productCategory.getSensorAufloesung() == 0) {
        wrongInputQuit("emptyValue");
